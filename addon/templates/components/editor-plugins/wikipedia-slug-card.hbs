<div class="modal-dialog__content">
  <p class="u-spacer--tiny">{{info.label}} <br>
    <strong>Do you want to insert a link to {{get options 0}} ?</strong>
  </p>
</div>
<div class="modal-dialog__footer">
  {{#wu-button-group}}
    {{wu-button label="Accept" size="small" isNarrow=true command="ctrl + j" commandLocation="below" onClick=(action "insert")}}
    {{wu-button label="Reject" size="tiny" isLink=true isDark=true isNarrow=true command="esc" commandLocation="below" onClick=null}}
  {{/wu-button-group}}

  {{yield}}
</div>
