<div class="modal-dialog__content">
  <p class="u-spacer--tiny">
    {{info.label}}
    <br>
    <strong>Do you want to insert a link to {{get options 0}}?</strong>
  </p>
</div>
<div class="modal-dialog__footer">
  <WuButtonGroup>
    <WuButton @label="Yes" @size="small" @isNarrow={{true}} @commandLocation="below" @onClick={{action "insert"}} />
  </WuButtonGroup>

  {{yield}}
</div>
